{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationDir": "dist/types",
    "rootDir": "src",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": []
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/**/__tests__/**"]
}
